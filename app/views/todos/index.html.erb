<article class="todosPage-body">
  <h1 class="Todo-title">My Todo-List</h1>
  <%= form_with scope: :todo,class:"todoAdd-form", local: true do |form| %>
    <%= form.text_field :todo_text , placeholder: "What's next?" %>
    <%= form.date_field :due_date , placeholder: "DD-MM-YYYY" %>
    <%= form.submit "Add",id:"todos_addForm" %>
  <% end %>
</form>
<%= render partial: "todosection-todo",locals: {todo_heading: "Overdue" , todos: current_user.todos.overdue ,show_date: true } %>
<%= render partial: "todosection-todo",locals: {todo_heading: "Due Today", todos: current_user.todos.due_today ,show_date: false } %>
<%= render partial: "todosection-todo",locals: {todo_heading: "Due Later", todos: current_user.todos.due_later ,show_date: true } %>
</article>
